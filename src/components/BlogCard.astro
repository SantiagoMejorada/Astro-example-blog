---
const { post } = Astro.props;
---
<div class="border rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow bg-white flex flex-col h-full">
    <img src={post.data.mainImage} alt={post.data.title} class="w-full h-48 object-cover">
    <div class="p-4 flex-1 flex flex-col justify-between">
        <div>
            <h2 class="text-2xl font-semibold mb-2">{post.data.title}</h2>
            <div class="flex items-center mb-4">
                <img src={post.data.authorImage} alt={post.data.author} class="w-10 h-10 rounded-full mr-3">
                <div>
                    <p class="text-sm font-medium">{post.data.author}</p>
                    <p class="text-sm text-gray-500">{post.data.date}</p>
                </div>
            </div>
            <p class="text-gray-700 mb-4">{post.body?.slice(0, 100)}...</p>
        </div>
        <a href=`blog/${post.slug}` class="mt-auto text-blue-600 hover:underline">Read more...</a>
    </div>
</div>