---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Example blog">
  <section class="text-center mt-20">
    <img
      src="/src/images/me.jpg"
      alt="Profile"
      class="w-40 h-40 rounded-full mx-auto mb-8 shadow-lg"/>
    <h1 class="text-5xl font-bold mb-8">Astro example</h1>
    <p class="text-lg mb-8">Nisi ipsum est magna aliqua veniam.</p>
    <div class="mt-6 flex justify-center space-x-4">
      <a
        href="/about"
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500 transition duration-300">
        About Me
      </a>
      <a
        href="/archives"
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500 transition duration-300">
        Blog
      </a>
    </div>
  </section>
</Layout>
